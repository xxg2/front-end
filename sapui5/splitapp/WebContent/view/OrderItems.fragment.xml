<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
<Panel>
	<Table id="lineItemList" items="{path:'SalesOrderItems'}">
		<headerToolbar>
			<Toolbar>
				<Label text="Order Items" />
				<ToolbarSpacer />
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column><header><Label text="Item" /></header></Column>
			<Column width="4em" minScreenWidth="Tablet" demandPopin="true" hAlign="Center"><header><Label text="Quantity" /></header></Column>
			<Column width="10em" minScreenWidth="Tablet" demandPopin="true"	hAlign="Center"><header><ObjectNumber number="Your Price" unit="{CurrenIso}" /></header></Column>
			<Column hAlign="Center"><header><Label text="Total" /></header></Column>
			<Column hAlign="Center"><header><Label text="Status" /></header></Column>
			<Column hAlign="Center"><header><Label text="% Shipped" /></header></Column>
		</columns>
		<ColumnListItem type="Navigation" press="fireLineItemPress">
			<cells>
				<ObjectIdentifier text="{ItmNumber}" />
				<Text text="{TargetQty}" />
				<Text text="{NetValue}" />
				<Text text="{NetValue}" />
				<Text text="{NetValue}" />
				<ProgressIndicator width="90%" percentValue="{NetValue}" showValue="true" height="1.375em"/>
			</cells>
		</ColumnListItem>
	</Table>
</Panel>
</core:FragmentDefinition>